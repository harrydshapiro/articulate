{
  "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "incremental": true,
      "module": "commonjs",
      "outDir": "./dist",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "lib": ["es2020"],
      "esModuleInterop": true
  }
}